<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.orchestra">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_orchestra"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_orchestra"
        android:supportsRtl="true"
        android:theme="@style/Theme.Orchestra"
        android:usesCleartextTraffic="true"
        android:allowClearUserData="true">
        <activity android:name="view.ui.PagerActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarPage">
        </activity>
        <activity
            android:name="view.ui.WebViewActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MaterialComponents.DayNight" />
        <activity
            android:name="view.ui.SettingsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MaterialComponents.DayNight" />
        <activity
            android:name="view.ui.SearchDeviceActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SearchDeviceActivityPage" />
        <activity
            android:name="view.ui.DevicePhysicalConfigurationActivity"
            android:screenOrientation="portrait"
            android:theme="@style/DevicePhysicalConfigurationActivityPage" />
        <activity
            android:name="view.ui.CreateDeviceActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CreateDeviceActivityPage" />
        <activity
            android:name="view.ui.SupportedAccessoriesListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SupportedAccessoriesListActivityPage" />
        <activity
            android:name="view.ui.SupportedDeviceListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SupportedDeviceListActivityPage" />
        <activity
            android:name="view.ui.DetailSceneActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar" />
        <activity
            android:name="view.ui.DetailDeviceActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar" />
        <activity
            android:name="view.ui.CreateSceneActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CreateScenePage" />
        <activity
            android:name="view.ui.HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MaterialComponents.DayNight">
        </activity>
        <activity
            android:name="view.ui.SignInActivity"
            android:label="@string/create_account_title_page"
            android:screenOrientation="portrait"
            android:theme="@style/CreateAccountPage" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Accepts URIs that begin with "http://www.example.com/gizmosâ€ -->
                <data android:scheme="http"
                    android:host="www.orchestra.local"
                    android:pathPrefix="/signup" />
                <!-- note that the leading "/" is required for pathPrefix-->
            </intent-filter>
        </activity>
        <activity
            android:name="view.ui.LoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="view.ui.MainActivity" />
    </application>

</manifest>