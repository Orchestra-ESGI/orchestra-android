<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.orchestra">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_orchestra"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_orchestra"
        android:supportsRtl="true"
        android:theme="@style/Theme.Orchestra"
        android:usesCleartextTraffic="true"
        android:allowClearUserData="true">

        <service
            android:name="core.push.MyFirebaseService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity android:name="view.Pager.PagerActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarPage">
        </activity>
        <activity
            android:name="view.ui.WebViewActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MaterialComponents.DayNight" />
        <activity
            android:name="view.Settings.SettingsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MaterialComponents.DayNight" />
        <activity
            android:name="view.ui.SuccessActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar" />
        <activity
            android:name="view.ui.DevicePhysicalConfigurationActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar" />
        <activity
            android:name="view.Create.Device.CreateDeviceActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
            android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity
            android:name="view.SupportedDevice.ui.SupportedAccessoriesListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar" />
        <activity
            android:name="view.SupportedDevice.ui.SupportedDeviceListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar" />
        <activity
            android:name="view.Detail.Scene.DetailSceneActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar" />
        <activity
            android:name="view.Detail.Device.DetailDeviceActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar" />
        <activity
            android:name="view.Create.Scene.CreateSceneActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
            android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity
            android:name="view.Home.HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MaterialComponents.DayNight">
        </activity>
        <activity
            android:name="view.ui.SignUpActivity"
            android:label="@string/create_account_title_page"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Accepts URIs that begin with "http://www.example.com/gizmos” -->
                <data android:scheme="http"
                    android:host="www.orchestra.local"
                    android:pathPrefix="/signup" />
                <!-- note that the leading "/" is required for pathPrefix-->
            </intent-filter>
        </activity>
        <activity
            android:name="view.ui.LoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar">
        </activity>
        <activity android:name="view.ui.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>