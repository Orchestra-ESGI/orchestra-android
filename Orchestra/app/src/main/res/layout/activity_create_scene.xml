<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_primary_blue"
    tools:context="view.Create.Scene.CreateSceneActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/create_scene_name_tv"
            android:text="@string/create_scene_name"
            android:fontFamily="@font/gilroy_extra_bold"
            android:textSize="24sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/create_scene_name_et"
            android:background="@drawable/create_scene_edit_text_shape"
            android:hint="@string/create_scene_name_hint"
            android:fontFamily="@font/gilroy_light"
            android:textColorHint="@color/light_gray"
            android:textColor="@color/white"
            android:inputType="text"
            android:maxLines="1"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/create_scene_description_tv"
            android:text="@string/create_scene_description"
            android:fontFamily="@font/gilroy_extra_bold"
            android:textSize="24sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/create_scene_description_et"
            android:background="@drawable/create_scene_edit_text_shape"
            android:hint="@string/create_scene_description_hint"
            android:fontFamily="@font/gilroy_light"
            android:textColorHint="@color/light_gray"
            android:textColor="@color/white"
            android:inputType="text"
            android:maxLines="1"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:id="@+id/create_scene_trigger_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/create_scene_add_trigger_tv"
                android:text="@string/create_scene_add_trigger"
                android:fontFamily="@font/gilroy_extra_bold"
                android:textSize="24sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <LinearLayout
                    android:id="@+id/create_scene_trigger_by_linear_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:fontFamily="@font/gilroy_light"
                        android:text="@string/create_scene_trigger_by"/>

                    <Spinner
                        android:id="@+id/create_scene_trigger_device"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="@string/create_scene_when"
                        android:fontFamily="@font/gilroy_light"/>

                    <Spinner
                        android:id="@+id/create_scene_trigger_action_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="@string/create_scene_is"
                        android:paddingEnd="20dp"
                        android:fontFamily="@font/gilroy_light"/>

                    <Spinner
                        android:id="@+id/create_scene_trigger_action"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <Spinner
                        android:id="@+id/create_scene_trigger_operator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/create_scene_trigger_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="number"/>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/create_scene_add_action_tv"
            app:layout_constraintTop_toBottomOf="@id/create_scene_description_et"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/create_scene_add_action"
            android:textColor="@color/blue_pwd"
            android:fontFamily="@font/gilroy_extra_bold"
            android:textSize="24sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/create_scene_list_action_rv"
            app:layout_constraintTop_toBottomOf="@+id/create_scene_add_action_tv"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />

    </LinearLayout>
</ScrollView>