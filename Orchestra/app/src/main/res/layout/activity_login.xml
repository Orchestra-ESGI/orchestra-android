<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="view.ui.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_title_tv"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="5dp"
            android:text="@string/login_welcome"
            android:textSize="36sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_gravity="center">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_id_tv"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="10dp"
            android:text="@string/login_email"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="24sp"/>

        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/login_id_et"
            android:drawableStart="@drawable/ic_user"
            android:background="@drawable/login_edit_background"
            android:inputType="text"
            android:maxLines="1"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_pwd_tv"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="10dp"
            android:text="@string/login_pwd"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="24sp"/>

        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/login_pwd_et"
            android:drawableStart="@drawable/ic_password"
            android:background="@drawable/login_edit_background"
            android:inputType="textPassword"
            android:maxLines="1"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_forgot_pwd_tv"
            android:layout_gravity="center"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:text="@string/login_forgot_pwd"
            android:textColor="@color/blue_pwd"
            android:textSize="10sp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_connect_btn"
            android:text="@string/login_connect"
            android:layout_marginTop="25dp"
            android:backgroundTint="@color/btn_connexion"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_no_account_tv"
            android:text="@string/login_no_account"
            android:textColor="@color/light_gray"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="12sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_create_account_tv"
            android:text="@string/login_create_account"
            android:layout_gravity="center"
            android:textColor="@color/blue_pwd"
            android:textStyle="bold"
            android:textSize="14sp"/>

    </LinearLayout>

</ScrollView>