<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_primary_blue"
    tools:context="view.ui.MainActivity">

    <ImageView
        android:id="@+id/splashscreen_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:src="@mipmap/ic_orchestra"/>

    <TextView
        android:id="@+id/splashscreen_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/splashscreen_iv"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="130dp"
        android:fontFamily="@font/gilroy_extra_bold"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="54sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="from NRV Inc."
        android:textColor="@color/white"
        android:textSize="24sp"
        android:fontFamily="@font/gilroy_extra_bold"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>