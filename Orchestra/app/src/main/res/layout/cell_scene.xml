<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:layout_marginBottom="5dp"
    android:layout_marginEnd="5dp"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@color/black">

    <ImageView
        android:id="@+id/cell_scene_logo_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_scene"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/cell_scene_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        android:fontFamily="@font/gilroy_light"
        android:layout_toEndOf="@id/cell_scene_logo_iv"
        android:layout_toStartOf="@id/cell_scene_info_iv"
        tools:text="Scene"
        />

    <ImageView
        android:id="@+id/cell_scene_info_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_info"/>

</RelativeLayout>