<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="168dp"
    android:layout_height="48dp"
    android:layout_marginBottom="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@color/purple_200">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/cell_scene_logo_iv"
        android:src="@drawable/ic_scene"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cell_scene_title_tv"
        app:layout_constraintLeft_toRightOf="@id/cell_scene_logo_iv"
        app:layout_constraintTop_toTopOf="@id/cell_scene_logo_iv"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:textStyle="bold"
        tools:text="Scene"
        />

</androidx.constraintlayout.widget.ConstraintLayout>